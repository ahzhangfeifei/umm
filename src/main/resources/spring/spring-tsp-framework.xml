<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean" />

    <bean class="com.umm.ats.core.framework.ErrorRespController"/>

    <bean class="com.umm.ats.core.tsp4server.TspErrorRespController"/>

    <!-- Bean Method Executor -->
    <bean class="com.umm.ats.core.framework.invoke.BeanMethodInvokeController">
        <property name="beanMethodInvoker">
            <bean class="com.umm.ats.core.utils.invoke.BeanMethodInvoker"/>
        </property>
    </bean>

    <mvc:interceptors>
        <ref bean="actionTracerInterceptor"/>
    </mvc:interceptors>

    <mvc:cors>
        <mvc:mapping path="/**"/>
    </mvc:cors>

    <bean id="tspBodyRequestResponseProcessor" class="com.umm.ats.core.tsp4server.TspBodyRequestResponseProcessor">
        <property name="returnWrappers">
            <list>
                <bean class="com.umm.ats.core.framework.DefaultReturnWrapper">
                    <property name="exclude">
                        <list>
                            <value>com.umm.ats.core.framework.resp.Response</value>
                            <value>com.umm.ats.core.framework.resp.ApiResp</value>
                            <value>com.umm.operation.platform.tsg.base.core.utils.ResponseVo</value>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean class="com.umm.ats.core.tsp4server.TspBodyProcessorInjector" />

    <mvc:annotation-driven conversion-service="conversionService" validator="validator" />

    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="204800" />
    </bean>

    <!-- bean id="safeDefaultCorsProcessor" class="com.umm.ats.core.framework.SafeDefaultCorsProcessor" /-->

    <bean id="exceptionMessageUtils" class="com.umm.ats.core.utils.ExceptionMessageUtils"/>

    <bean class="com.umm.ats.core.tsp4server.TspExceptionResolver">
        <property name="excludedExceptions">
            <list>
                <value>org.springframework.http.converter.HttpMessageNotWritableException</value>
            </list>
        </property>
    </bean>

</beans>